// Kelas Song
class Song {
    String title;
    Song next;

    public Song(String title) {
        this.title = title;
        this.next = null;
    }
}

// Kelas Playlist
class Playlist {
    private Song head;

    public Playlist() {
        this.head = null;
    }

    // Metode untuk menambah lagu
    public void addSong(String title) {
        Song newSong = new Song(title);
        if (head == null) {
            head = newSong; // Jika playlist kosong, tambahkan lagu sebagai head
        } else {
            Song current = head;
            while (current.next != null) {
                current = current.next; // Cari akhir playlist
            }
            current.next = newSong; // Tambahkan lagu baru di akhir
        }
    }

    // Metode untuk menampilkan semua lagu
    public void displayPlaylist() {
        if (head == null) {
            System.out.println("Playlist kosong.");
            return;
        }
        
        Song current = head;
        while (current != null) {
            System.out.println(current.title); // Tampilkan judul lagu
            current = current.next; // Pindah ke lagu berikutnya
        }
    }

    public static void main(String[] args) {
        Playlist playlist = new Playlist();
        playlist.addSong("Lagu 1");
        playlist.addSong("Lagu 2");
        playlist.addSong("Lagu 3");

        System.out.println("Playlist:");
        playlist.displayPlaylist();
    }
}
